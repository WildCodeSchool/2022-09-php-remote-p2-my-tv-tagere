{% extends 'layout.html.twig' %}


{% block content %}
<section class="container mt-3">
	<h1>Connectez-vous !</h1>
	<p>Si vous avez un compte, Ã©videment... Sinon
		<a href="register">enregistrez-vous !</a>
	</p>

	<form class="row" method="post">
		<div class=" col-lg-8 col-md-10 col-sm-12 ms-auto me-auto bg-light rounded-1 p-3">
			<div class="mb-3 d-flex justify-content-center">
				<label for="email">
					Votre email :
				</label>
				<input type="email" name="email" id="email" placeholder="Votre email" required>
			</div>
			<div class="mb-3 d-flex justify-content-center">
				<label for="password">Votre mot de passe :
				</label>
				<input type="password" name="password" id="password" placeholder="Votre mot de passe" required>
			</div>
            {% for error in errors %}
                <div class="mb-3 d-flex justify-content-center">
                    <p>{{error}}</p>
                </div>
                {% endfor %}
			<div class="mb-3 d-flex justify-content-center">
				<input class="btn btn-success" type="submit" value="Connexion">
			</div>

		</div>
	</form>
</section>
{% endblock %}
