{% extends 'layout.html.twig' %}

{% block title %}
	Mettre à jour la série
{% endblock %}

{% block content %}
	<main class="serieEdit position-relative">
		<div class="imgupdate">
			<img src="/assets/images/shows/{{serie.image}}" alt="">
		</div>
		<section class="formUpdate">
			<h1>Modifier la série</h1>
			<form method="post" action='' enctype="multipart/form-data">
				<div>
					<label for="serieName">Nom série:</label><br/>
					<input class="form-control" type="text" id="serieName" name="serieName" aria-label="default input example" value="{{serie.name}}" required>
				</div>

				<div>
					<label for="nbOfSeasons">Nombre de saisons</label><br/>
					<input class="form-control" type="text" id="nbOfSeasons" name="nbOfSeasons" aria-label="default input example" value="{{serie.nb_of_seasons}}" required>
				</div>
				<div>
					<label for="year">Date de diffusion</label><br/>
					<input class="form-control" type="number" id="year" name="year" aria-label="default input example" value="{{serie.year}}" required>
				</div>
				<div>
					<label for="description">Description</label><br/>
					<textarea id="description" name="description" cols="100">{{serie.description}}
					</textarea>
				</div>
				<div class="connect">
					<input class="btn" type="submit" id="inputGroupFileAddon04" value="Mettre à jour la série">
				</div>
			</form>
		</section>
	</main>
{% endblock %}
